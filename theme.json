{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Lato, sans-serif",
          "slug": "lato",
          "name": "Lato"
        },
        {
          "fontFamily": "PressonClean",
          "slug": "presson_clean",
          "name": "PressonClean",
          "src": ["file:./assets/css/webfonts/presson-clean.woff2"]
        }
      ]
    },
    "blocks": {
      "core/group": {
        "spacing": {
          "padding": true,
          "margin": true,
          "units": ["px", "em", "rem", "vh", "vw"]
        }
      }
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw"]
    },
    "layout": {
      "contentSize": "1000px",
      "wideSize": "1200px"
    }
  },
  "styles": {
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--light-cyan)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "calc(18px + (24 - 18) * ((100vw - 300px) / (1600 - 300)))",
          "textTransform": "uppercase",
          "fontFamily": "PressonClean",
          "lineHeight": "1.em"
        }
      }
    },
    "color": {
      "palette": [
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "White"
        },
        {
          "slug": "dark-grey",
          "color": "#121212",
          "name": "Dark grey"
        },
        {
          "slug": "light-grey",
          "color": "#383838",
          "name": "Light grey"
        },
        {
          "slug": "cyan",
          "color": "#00838f",
          "name": "Cyan"
        },
        {
          "slug": "light-cyan",
          "color": "#4fb3bf",
          "name": "Light cyan"
        }
      ],
      "gradients": [
        {
          "slug": "light-cyan-to-white",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--light-cyan), var(--wp--preset--color--white))",
          "name": "Light cyan to white"
        }
      ],
      "background": "white",
      "text": "black"
    }
  }
}
